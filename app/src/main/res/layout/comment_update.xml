<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommentUpdate">

    <TextView
        android:id="@+id/commentMail"
        android:layout_width="135dp"
        android:layout_height="20dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="63dp"
        android:text="user"
        android:textAlignment="center"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/commentBox"
        android:layout_width="364dp"
        android:layout_height="97dp"
        android:layout_marginTop="36dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/commentPlace"
        tools:layout_editor_absoluteX="28dp" />

    <TextView
        android:id="@+id/commentPlace"
        android:layout_width="229dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="11dp"
        android:text="place"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/commentMail"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/commentUpdate"
        android:layout_width="183dp"
        android:layout_height="61dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:text="Update"
        app:layout_constraintEnd_toStartOf="@+id/commentDelete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commentBox" />

    <Button
        android:id="@+id/commentDelete"
        android:layout_width="163dp"
        android:layout_height="61dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="437dp"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commentBox" />
</androidx.constraintlayout.widget.ConstraintLayout>