<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:background="@color/red_0"
    xmlns:tools="http://schemas.android.com/tools">
    
    <ImageView
        android:id="@+id/restaurantImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/restaurantName"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/restaurantImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red_700"
        android:textSize="20sp"
        tools:text="Name"/>
    <TextView
        android:id="@+id/restaurantType"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/restaurantName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/restaurantImage"
        android:textColor="@color/red_700"
        android:textSize="20sp"
        tools:text="Type"/>

    <ImageView
        android:id="@+id/imageViewStar1"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/restaurantType"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_toEndOf="@+id/restaurantImage"
        app:srcCompat="@drawable/ic_baseline_star_24" />
    <ImageView
        android:id="@+id/imageViewStar2"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/restaurantType"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_toEndOf="@+id/imageViewStar1"
        app:srcCompat="@drawable/ic_baseline_star_24" />
    <ImageView
        android:id="@+id/imageViewStar3"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/restaurantType"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_toEndOf="@+id/imageViewStar2"
        app:srcCompat="@drawable/ic_baseline_star_24" />
    <ImageView
        android:id="@+id/imageViewStar4"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/restaurantType"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_toEndOf="@+id/imageViewStar3"
        app:srcCompat="@drawable/ic_baseline_star_24" />

    <ImageView
        android:id="@+id/imageStarHalf"
        android:layout_marginTop="5dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/restaurantType"
        android:layout_toEndOf="@+id/imageViewStar4"
        app:srcCompat="@drawable/ic_baseline_star_half_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/restaurantImage"
        android:layout_marginTop="10dp"
        android:background="@color/red_700"/>

    <ImageView
        android:id="@+id/btnReadMore"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_below="@+id/imageStarHalf"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:layout_marginStart="95dp"
        android:layout_marginTop="-55dp"
        android:layout_marginEnd="7dp"
        android:layout_toEndOf="@+id/imageStarHalf"
        app:srcCompat="@drawable/ic_baseline_read_more_24" />


</RelativeLayout>