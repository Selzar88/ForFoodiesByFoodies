<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".AddPlaceActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/monoton"
        android:padding="6dp"
        android:text="@string/add_place1"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/red_700"
        android:textSize="30sp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant"
        android:id="@+id/checkRestaurant"
        android:layout_marginLeft="20dp"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Catering"
        android:layout_marginLeft="40dp"
        android:id="@+id/checkCatering"/>
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StreetFood"
        android:layout_marginLeft="40dp"
        android:id="@+id/checkStreetFood"/>
    </RadioGroup>


    <EditText
        android:id="@+id/editTextResName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:autofillHints=""
        android:background="@drawable/et_style"
        android:hint="@string/enter_name"
        android:padding="5dp"
        android:inputType="text"
        android:minHeight="48dp"
        tools:ignore="TextContrastCheck" />

    <EditText
        android:id="@+id/editTextResLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:autofillHints=""
        android:background="@drawable/et_style"
        android:hint="@string/enter_location"
        android:padding="5dp"
        android:inputType="text"
        android:minHeight="48dp"
        tools:ignore="TextContrastCheck" />

    <EditText
        android:id="@+id/editTextResDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="5dp"
        android:autofillHints=""
        android:background="@drawable/et_style"
        android:hint="@string/enter_description"
        android:inputType="textMultiLine"
        android:minHeight="100dp"
        android:padding="5dp"
        tools:ignore="TextContrastCheck" />

    <CheckBox
        android:id="@+id/veganFriendly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vegan Friendly" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <ImageView
        android:id="@+id/imageRestaurantImage"
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:layout_centerVertical="true"
        android:background="@drawable/et_style"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="13dp" />

    <Button
        android:id="@+id/btnBrowseImage"
        android:layout_width="177dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="13dp"
        android:text="Browse Image" />

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="184dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:text="Upload" />

    <Button
        android:id="@+id/btnAddPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Add to database" />


</LinearLayout>


